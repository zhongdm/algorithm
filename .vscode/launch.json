  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      // "url": "http://localhost:3030",
      "port": 3030,
      "webRoot": "${workspaceFolder}/App.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "port": 3030
    },

    {
      "type": "chrome",
      "request": "launch",
      "name": "启动 Chrome 并打开 localhost",
      "url": "http://localhost:3030",
      "webRoot": "${workspaceFolder}/App.js"
    }
  ]
}